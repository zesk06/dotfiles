		statusline $c3
		separator  $c3

		# colour of border, background, and text
		focused_workspace       $c2 $c5 $c2
		active_workspace        $c4 $c5 $c4
		inactive_workspace      $c5 #202020 $c3
		urgent_workspacei       #2f343f #ebcb8b $c3
	}
	# # arch: pour installer les icons: installer noto-fonts-emoji
	#font pango:SauceCodePro Nerd Font 10
	font pango:DejaVu Sans Mono, Awesome 12

        # status_command i3status
	status_command i3blocks
}
